<div class="section__wrapper {{ section.settings.display_visibility }}">
  {%-
    render 'component-section-padding'
    id: section.id,
    color_background_gradient: section.settings.color_background_gradient,
    color_background: section.settings.color_background,
    padding_top_mobile: section.settings.padding_top_mobile,
    padding_bottom_mobile: section.settings.padding_bottom_mobile,
    padding_top_desktop: section.settings.padding_top_desktop,
    padding_bottom_desktop: section.settings.padding_bottom_desktop,
    style_line_top: section.settings.style_line_top,
    style_line_bottom: section.settings.style_line_bottom,
    color_line: section.settings.color_line
  -%}
  <div class="container">
    {%- render 'component-image', id: section.id, image: section.settings.image, link: section.settings.link, ratio_block: section.settings.ratio_block, width_image: section.settings.width_image, alignment_horizontal: section.settings.alignment_horizontal, style_image: section.settings.style_image, fit_object: section.settings.fit_object -%}
  </div>
</div>

{% schema %}
{
  "name": "t:name.image",
  "tag": "section",
  "class": "image",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:info.intro_section_image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:label.image"
    },
    {
      "type": "range",
      "id": "width_image",
      "min": 16,
      "max": 1600,
      "step": 16,
      "unit": "px",
      "label": "t:label.image_width",
      "default": 800
    },
    {
      "type": "select",
      "id": "ratio_block",
      "label": "t:label.aspect_ratio",
      "info": "t:info.aspect_ratio",
      "options": [
        {
          "value": "default",
          "label": "t:label.default"
        },
        {
          "value": "landscape",
          "label": "t:label.landscape"
        },
        {
          "value": "portrait",
          "label": "t:label.portrait"
        },
        {
          "value": "square",
          "label": "t:label.square"
        },
        {
          "value": "widescreen",
          "label": "t:label.widescreen"
        }
      ],
      "default": "landscape"
    },
    {
      "type": "select",
      "id": "style_image",
      "label": "t:label.image_style",
      "options": [
        {
          "value": "default",
          "label": "t:label.default"
        },
        {
          "value": "rounded_corners",
          "label": "t:label.rounded_corners"
        },
        {
          "value": "circle",
          "label": "t:label.circle"
        },
        {
          "value": "border",
          "label": "t:label.border"
        }
      ]
    },
    {
      "type": "select",
      "id": "alignment_horizontal",
      "label": "t:label.horizontal_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:label.left"
        },
        {
          "value": "center",
          "label": "t:label.center"
        },
        {
          "value": "right",
          "label": "t:label.right"
        }
      ]
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:label.link"
    },
    {
      "type": "header",
      "content": "t:info.header_section_padding_settings"
    },
    {
      "type": "paragraph",
      "content": "t:info.intro_section_padding_settings"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:label.top_padding_desktop_32",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:label.bottom_padding_desktop_32",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:label.top_padding_mobile_16",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:label.bottom_padding_mobile_16",
      "default": 16
    },
    {
      "type": "header",
      "content": "t:info.header_separator_settings"
    },
    {
      "type": "paragraph",
      "content": "t:info.intro_separator_settings"
    },
    {
      "type": "select",
      "id": "style_line_top",
      "label": "t:label.top_separator_style",
      "options": [
        {
          "value": "dashed",
          "label": "t:label.dashed"
        },
        {
          "value": "dotted",
          "label": "t:label.dotted"
        },
        {
          "value": "line",
          "label": "t:label.line"
        },
        {
          "value": "none",
          "label": "t:label.none"
        }
      ],
      "default": "none"
    },
    {
      "type": "select",
      "id": "style_line_bottom",
      "label": "t:label.bottom_separator_style",
      "options": [
        {
          "value": "dashed",
          "label": "t:label.dashed"
        },
        {
          "value": "dotted",
          "label": "t:label.dotted"
        },
        {
          "value": "line",
          "label": "t:label.line"
        },
        {
          "value": "none",
          "label": "t:label.none"
        }
      ],
      "default": "none"
    },
    {
      "type": "color",
      "id": "color_line",
      "label": "t:label.separator_color"
    },
    {
      "type": "header",
      "content": "t:info.header_visibility_settings"
    },
    {
      "type": "paragraph",
      "content": "t:info.intro_visibility_settings"
    },
    {
      "type": "radio",
      "id": "display_visibility",
      "label": "t:label.visibility",
      "options": [
        {
          "value": "hide-no",
          "label": "t:label.do_not_hide"
        },
        {
          "value": "hide-desktop",
          "label": "t:label.hide_on_desktop"
        },
        {
          "value": "hide-mobile",
          "label": "t:label.hide_on_mobile"
        }
      ],
      "default": "hide-no"
    }
  ],
  "presets": [
    {
      "name": "t:name.image",
      "blocks": []
    }
  ]
}
{% endschema %}
