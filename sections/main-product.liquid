                <noscript class="loading-lazy">
                  {{ media | image_url: width: 2048 | image_tag: width: 2048, class: 'img-absolute', loading: 'lazy' }}
                </noscript>
              {%- when 'video' -%}
                {{ media | media_tag: image_size: "2048x", autoplay: false, loop: true, controls: true, preload: "none" }}
              {%- when 'external_video' -%}
