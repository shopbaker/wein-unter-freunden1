            {%- when 'video' -%}
              {{ featured_media | media_tag: image_size: "2048x", autoplay: true, loop: true, controls: true, preload: "none" }}
            {%- when 'external_video' -%}
              {{ featured_media | external_video_tag }}
            {%- when 'model' -%}
              <product-model>
                {{ featured_media | model_viewer_tag }}
