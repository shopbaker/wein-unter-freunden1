                    when 'testimonial'
                      render 'component-card-testimonial', id: block.id, rating: block.settings.rating, content: block.settings.content, source: block.settings.source, product: block.settings.product, style_image: block.settings.style_image, display_fill_available: block.settings.display_fill_available
                    when 'rich_text'
                      render 'component-rich-text', id: block.id, icon: block.settings.icon, position_icon: block.settings.position_icon, color_icon: block.settings.color_icon, color_border_icon: block.settings.color_border_icon, color_border: block.settings.color_border, heading: block.settings.heading, heading_type: block.settings.heading_type, content: block.settings.content, color_background: block.settings.color_background, color_background_gradient: block.settings.color_background_gradient, color_text: block.settings.color_text, alignment_text: block.settings.alignment_text, button_text: block.settings.button_text, button_url: block.settings.button_url, stretch: block.settings.stretch_content, align: block.settings.align_items, size_text: block.settings.size_text, style_button: block.settings.style_button, display_fill_available: block.settings.display_fill_available, caption: block.settings.caption
                    when 'image'
                      render 'component-image', id: block.id, image: block.settings.image, link: block.settings.link, ratio_block: block.settings.ratio_block, width_image: block.settings.width_image, alignment_horizontal: block.settings.alignment_horizontal, style_image: block.settings.style_image, display_fill_available: block.settings.display_fill_available
                    when 'video'
                      render 'component-video', id: block.id, url_video: block.settings.url_video, url_video_hosted: block.settings.url_video_hosted, type: block.settings.url_video.type, video_id: block.settings.url_video.id, video_loop: block.settings.video_loop, video_mute: block.settings.video_mute, video_autoplay: block.settings.video_autoplay, image_video: block.settings.image_video, ratio_block: block.settings.ratio_block, display_fill_available: block.settings.display_fill_available
                    when 'form'
                      render 'component-form-contact', id: block.id, icon: block.settings.icon, caption: block.settings.caption, heading: block.settings.heading, heading_type: block.settings.heading_type, subheading: block.settings.subheading, color_icon: block.settings.color_icon, color_text: block.settings.color_text, color_subheading: block.settings.color_subheading, color_background: block.settings.color_background, display_fill_available: block.settings.display_fill_available
                  endcase
                -%}
              </div>
            {%- endfor -%}
            {%- assign float_desktop = section.settings.column_count_desktop | times: 1.0 -%}
            {%- assign float_mobile = section.settings.column_count_mobile | times: 1.0 -%}
            {%- assign rows_desktop = section.blocks.size | divided_by: float_desktop | ceil -%}
            {%- assign rows_mobile = section.blocks.size | divided_by: float_mobile | ceil -%}
            {%- assign total_columns_desktop = section.settings.column_count_desktop | times: rows_desktop -%}
            {%- assign total_columns_mobile = section.settings.column_count_mobile | times: rows_mobile -%}

            {%- for block in section.blocks -%}
              {%- if block.settings.display_fill_available -%}
                {%- if section.blocks.size > section.settings.column_count_desktop -%}
                  {%- assign desktop_fullwidth = total_columns_desktop | minus: section.blocks.size | plus: 1 | at_least: 1 -%}
                {%- else -%}
                  {%- assign desktop_fullwidth = section.settings.column_count_desktop | minus: section.blocks.size | plus: 1 | at_least: 1 -%}
                {%- endif -%}

                {%- if section.blocks.size > section.settings.column_count_mobile -%}
                  {%- assign mobile_fullwidth = total_columns_mobile | minus: section.blocks.size | plus: 1 | at_least: 1 -%}
                {%- else -%}
                  {%- assign mobile_fullwidth = section.settings.column_count_mobile | minus: section.blocks.size | plus: 1 | at_least: 1 -%}
                {%- endif -%}
                <style>
                  .grid-content__column--{{ block.id }} {
                    grid-column: span {{ mobile_fullwidth }};
                  }

                  @media (min-width: 768px) {
                    .grid-content__column--{{ block.id }} {
                      grid-column: span {{ desktop_fullwidth }};
                    }
                  }
                </style>
                {%- break -%}
              {%- endif -%}
            {%- endfor -%}
            <style>
              @media (max-width: 767px) {
                #shopify-section-{{ section.id }}.grid-content .container--grid.grid {
