                #shopify-section-{{ section.id }}.grid-content .container--grid.grid {
                  grid-template-columns: repeat({{ section.settings.column_count_desktop }}, minmax(0, 1fr));
                }
              }
            </style>
          </div>
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

